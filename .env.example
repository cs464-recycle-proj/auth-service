# =========================
# JWT Configuration
# =========================
# Base64-encoded HMAC-SHA256 secret (must be 256 bits / 32 bytes)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-base64-encoded-256-bit-secret-key-here

# Token expiration time in milliseconds (default: 24 hours = 86400000)
JWT_EXPIRATION_TIME=86400000

# JWT issuer claim (identifies who issued the token)
JWT_ISSUER=auth-service


# =========================
# Database Configuration
# =========================
# PostgreSQL connection URL
DATABASE_URL=jdbc:postgresql://localhost:5432/greenloop

# Database credentials
DATABASE_USERNAME=your-db-username
DATABASE_PASSWORD=your-db-password


# =========================
# Email (SMTP) Configuration
# =========================
# SMTP server host (e.g., smtp.gmail.com)
MAIL_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
MAIL_PORT=587

# Email account username
MAIL_USERNAME=your-email@gmail.com

# Email account password or app-specific password
MAIL_PASSWORD=your-email-password


# =========================
# Optional: Override defaults
# =========================
# Server port (default: 8081)
# SERVER_PORT=8081

# OTP expiration in minutes (default: 5)
# OTP_EXPIRATION_MINUTES=5
