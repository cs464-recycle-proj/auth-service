# Example secrets file - DO NOT COMMIT THE ACTUAL secrets.yaml FILE
# Copy this file to values.secrets.yaml and fill in your actual secrets
# Usage: helm install myrelease ./helm -f values.yaml -f values.secrets.yaml

image:
  repository: registry.digitalocean.com/YOUR_REGISTRY/auth-service
  tag: "latest"

postgresql:
  auth:
    password: "YOUR_POSTGRESQL_PASSWORD_HERE"

env:
  # Database Password
  PGPASSWORD: "YOUR_POSTGRESQL_PASSWORD_HERE"
  SPRING_DATASOURCE_PASSWORD: "YOUR_POSTGRESQL_PASSWORD_HERE"
  
  # JWT Secret (use a strong random string)
  JWT_SECRET: "YOUR_JWT_SECRET_HERE_USE_STRONG_RANDOM_STRING"
  
  # Email Password
  MAIL_PASSWORD: "YOUR_GMAIL_APP_PASSWORD_HERE"
